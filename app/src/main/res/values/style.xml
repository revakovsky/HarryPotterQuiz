<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>

    <style name="TextView_hint" parent="TextView">
        <item name="android:textAppearance">@style/Text_hint</item>
    </style>


    <style name="Text">
        <item name="android:textSize">48sp</item>
        <item name="fontFamily">@font/harry_potter</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Text_hint" parent="Text">
        <item name="android:textSize">@dimen/text_regular_24sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>